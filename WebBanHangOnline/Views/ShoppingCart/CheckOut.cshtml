@{
    ViewBag.Title = "Thanh toán";
}


<style>
    .error{color:red;}
</style>

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Card</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">

                <div class="col-md-12 text-center">
                    <h1 class="">Pay</h1>
                    <p>Please check your order information for accuracy!</p>
                </div>

            </div>
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div id="show_success"></div>
                    <div class="col-md-9">
                       @Html.Action("Partial_CheckOut", "Shoppingcart")
                    </div>
                    <div class="col-md-3">
                        @Html.Action("Partial_Item_ThanhToan", "ShoppingCart")

                    </div>
                </div>
            }
            else
            {
        <div>
            You don't have any products yet. Please return to the page <a href="/san-pham">Product</a> to make a purchase.
        </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function Ornailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Your purchase failed! Please try again!");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email:true
                    }
                },
                messages: {
                    'CustomerName': 'You cannot leave this field blank',
                    'Phone': 'You cannot leave this field blank',
                    'Address': 'You cannot leave this field blank',
                    'Email': 'Email is not valid'
                }
            });
        });
    </script>
}